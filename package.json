{
  "name": "jlivertool",
  "version": "1.3.0",
  "description": "Simple Bilibili Danmaku Tool",
  "main": "src/main.js",
  "scripts": {
    "start": "npx webpack && cross-env NODE_ENV=development electron .",
    "build": "npx webpack && cross-env NODE_ENV=production electron-builder build -mw --publish=never"
  },
  "build": {
    "win": {
      "icon": "src/assets/icons/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "src/assets/icons/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "author": "Xinrea",
  "license": "MIT",
  "devDependencies": {
    "@types/alpinejs": "^3.7.1",
    "cross-env": "^7.0.3",
    "electron": "^15.0.0",
    "electron-builder": "^23.0.2",
    "node-loader": "^2.0.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "alpinejs": "^3.10.4",
    "concurrently": "^7.4.0",
    "electron-db": "^0.15.7",
    "electron-store": "^8.0.1",
    "exceljs": "^4.3.0",
    "filereader": "^0.10.3",
    "moment": "^2.29.1",
    "node-fetch": "^3.2.0",
    "openurl": "^1.1.1",
    "pako": "^2.0.4",
    "reconnecting-websocket": "^4.4.0",
    "uuid": "^8.3.2",
    "ws": "^8.5.0"
  }
}
